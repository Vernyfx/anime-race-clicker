local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({Name = "Verny Hub", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})

local Tab = Window:MakeTab({
	Name = "Main",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

Tab:AddLabel("MUST HAVE GAMEPASS FOR MULTI OPENS")

Tab:AddLabel("Must Be close to the egg/star")


Tab:AddDropdown({
	Name = "Select Egg You Want To Open",
	Default = " ",
	Options = {"Star1", "Star2", "Star3", "Star4", "Star5", "Star6", "Star7", "Star8", "Star9", "Star10", "Star11", "Star12", "Star13", "Star14", "Star15", "Star16",},
	Callback = function(EGGValue)
		_G.selectedegg = EGGValue
	end    
})

Tab:AddDropdown({
	Name = "Select Amount Of Opens",
	Default = " ",
	Options = {1, 3, 6},
	Callback = function(SEValue)
		_G.selectamount = SEValue
	end    
})

Tab:AddToggle({
	Name = "Auto Open star/eggs",
	Default = false,
	Callback = function(TESValue)
		_G.togglestar = TESValue
	end    
})


task.spawn(function()
    while task.wait() do
        if _G.togglestar then
            if _G.selectamount then
                if _G.selectedegg ~= nil then
                    local args = {
                        [1] = _G.selectedegg,
                        [2] = _G.selectamount,
                        [3] = {}
                    }
                    game:GetService("ReplicatedStorage").Knit.Services.StarEggService.RF.OpenEggs:InvokeServer(unpack(args))
                    wait(1)
                end
            end
        end       
    end
end)


Tab:AddToggle({
	Name = "Auto Click",
	Default = false,
	Callback = function(ACValue)
		_G.autoclick = ACValue

        task.spawn(function()
            while _G.autoclick do
                game:GetService("ReplicatedStorage").Knit.Services.ClickerService.RF.PlayerClick:InvokeServer()
                wait(0.05)
            end
        end)
	end    
})
